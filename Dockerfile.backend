FROM python:3.11-slim

WORKDIR /app

COPY packages/server/pyproject.toml packages/server/
COPY packages/server/src/ packages/server/src/

RUN pip install --no-cache-dir packages/server/

COPY packages/server/alembic/ alembic/

EXPOSE 8000

CMD ["uvicorn", "agentstore_server.main:app", "--host", "0.0.0.0", "--port", "8000"]
